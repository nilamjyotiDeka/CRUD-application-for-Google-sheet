<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SheetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/btnSheet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CBEEE8"
            android:padding="15dp"
            android:text="Book details"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnSheet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Details"
            android:layout_margin="10dp"
            android:background="#CBEEE8"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="15dp"
            android:layout_below="@id/btnSheet1"
            />

        <Button
            android:id="@+id/btnSheet3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile details"
            android:layout_margin="10dp"
            android:background="#CBEEE8"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="15dp"
            android:layout_below="@id/btnSheet2"
            />


    </RelativeLayout>

</RelativeLayout>